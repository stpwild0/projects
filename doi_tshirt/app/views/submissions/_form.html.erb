<% form_for(@submission) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name %>
  </div>
  <div class="field">
    <%= f.label :department %><br />
    <%= f.text_field :department %>
  </div>
  <div class="field">
    <%= f.label :email_address %><br />
    <%= f.text_area :email_address %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
