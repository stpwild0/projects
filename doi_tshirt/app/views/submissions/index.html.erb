<% @submissions.each do |s| %>
  <tr>
    <td><%= s.full_name %></td>
    <td><%= s.department %></td>
    <td><%= s.email_address %></td>
    <td><%= link_to 'Show', s %></td>
    <td><%= link_to 'Destroy', s, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

